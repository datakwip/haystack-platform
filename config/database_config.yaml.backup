# Database configuration for TimescaleDB connection
#
# Environment Variable Support:
# - DATABASE_URL: Full PostgreSQL connection string (Railway format)
# - DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD: Individual overrides
#
# Railway Example:
#   DATABASE_URL=postgresql://user:pass@host.railway.app:5432/railway

database:
  host: localhost
  port: 5432
  database: datakwip
  user: demo
  password: demo123
  
# Organization settings
organization:
  name: "Demo Building Corp"
  key: "demo"
  
# Table settings
tables:
  value_table: "values_demo"
  current_table: "values_demo_current"
  
# TimescaleDB settings
timescale:
  enable_hypertables: true
  chunk_time_interval: "1 day"
  compression_after: "7 days"